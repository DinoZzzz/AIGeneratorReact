@model AIGeneratorWebApp.ViewModels.Customers.CustomerListViewModel
@{
    ViewData["Title"] = "Naručitelji";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold">Naručitelji</h1>
        <p class="text-muted">Pregled svih aktivnih naručitelja i građevina.</p>
    </div>
    <form method="get" class="d-flex gap-2">
        <input type="text" class="form-control" placeholder="Pretraži" name="search" value="@Model.Search" />
        <button class="btn btn-outline-primary" type="submit">Traži</button>
    </form>
</div>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Radni nalog</th>
                <th>Naručitelj</th>
                <th>Lokacija</th>
                <th>Aktivne građevine</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Items)
            {
                <tr>
                    <td>@customer.WorkOrder</td>
                    <td>@customer.Name</td>
                    <td>@customer.Location</td>
                    <td>
                        @foreach (var construction in customer.ActiveConstructions)
                        {
                            <span class="badge badge-active me-1">@construction</span>
                        }
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@customer.Id">Detalji</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<nav class="mt-4">
    <ul class="pagination">
        @for (var i = 0; i < Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : string.Empty)">
                <a class="page-link" asp-route-page="@i" asp-route-search="@Model.Search">@(i + 1)</a>
            </li>
        }
    </ul>
</nav>
